<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Màu đổ bóng -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Card background -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền thẻ -->
            <corners android:radius="12dp"/>  <!-- Bo tròn giống với bóng -->
        </shape>
    </item>

</layer-list>
