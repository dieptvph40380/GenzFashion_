<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_evaluate_ac"
    android:layout_height="match_parent"
    tools:context="fpl.md37.genz_fashion.UserScreen.EvaluateSuccessfull">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp"
        >
        <!-- Circle with checkmark -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_successfull"
                android:gravity="center">

                <ImageView
                    android:id="@+id/checkmark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_check_24"
                    android:contentDescription="Checkmark"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Payment Success Text -->
            <TextView
                android:id="@+id/paymentSuccessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluate Successful!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanks for your review!"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>


        <!-- View Order Button -->
        <Button
            android:id="@+id/backhome_ev"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/blue"
            android:text="Back to home"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>