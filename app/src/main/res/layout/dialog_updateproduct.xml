<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- CardView for Entire Layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Product"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/img_cancel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="230dp"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close" />
            </LinearLayout>

            <!-- Form Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <!-- Image View -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/product_image2"
                        android:layout_width="200dp"
                        android:layout_height="280dp"
                        android:background="#D6E4FF"
                        android:scaleType="fitCenter"
                        android:contentDescription="Product Image" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/updateproductupload2"
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#6B98D1"
                        android:text="Upload"
                        app:cornerRadius="12dp" />

                </LinearLayout>
                <!-- Input Fields -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <!-- Name Product -->
                    <EditText
                        android:id="@+id/product_name_dg2"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="Name Product"
                        android:background="@drawable/custom_edittext"
                        android:padding="8dp"
                        android:textSize="14sp" />

                    <!-- Price -->
                    <EditText
                        android:id="@+id/product_price_dg2"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="Price ..."
                        android:background="@drawable/custom_edittext"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="8dp" />

                    <!-- Quantity -->
                    <EditText
                        android:id="@+id/product_quantity_dg2"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:background="@drawable/custom_edittext"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:layout_marginTop="8dp" />

                    <!-- Supplier -->
                    <Spinner
                        android:id="@+id/products_supplier_sp2"
                        android:layout_width="160dp"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/custom_edittext"
                        android:layout_height="wrap_content"/>

                    <!-- Type Product -->
                    <Spinner
                        android:id="@+id/products_type_sp2"
                        android:layout_width="160dp"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/custom_edittext"
                        android:layout_height="wrap_content"/>

                    <!-- Description -->
                    <EditText
                        android:id="@+id/product_description_dg2"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:hint="Description"
                        android:background="@drawable/custom_edittext"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:maxLines="3" />
                </LinearLayout>
            </LinearLayout>

            <!-- Add Button -->
            <Button
                android:id="@+id/update_button_prd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="@android:color/white"
                android:backgroundTint="#6B98D1"
                android:layout_gravity="center_horizontal"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_margin="32dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
